<!DOCTYPE html>
<html>
<head>
  <title>Etsydemo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Quattrocento+Sans|Open+Sans|Roboto|Roboto+Condensed' rel='stylesheet' type='text/css'>

</head>
<body>
<%= render 'layouts/header' %>

<div class="container">
    
    <% flash.each do |name,msg|%>
      <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name.to_sym == :notice ? "success" : "danger" %> alert-dismissable" >
          <button type="button" class="close" data-dismiss="alert" aria-hidden"true">&times;</button>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        </div>
      <% end %>
    <% end %>
    <%= yield %>

</div> <!-- class cotainer -->

<%= render 'layouts/footer' %>
</body>
</html>
