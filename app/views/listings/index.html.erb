<div class="center">
<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold By: #{listing.user.name}" %></p>
          </div> <!-- div caption -->
        </div> <!-- div thumbnail -->
      </div> <!-- div col-md-3 -->
    <% end %>
</div> <!-- class row -->
</div> <!-- center -->
<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
