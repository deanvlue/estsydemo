<table class="table table-striped">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Action</th>
  </tr>

  <% @listings.each do |listing| %>
    <tr>
      <td><%= image_tag listing.image.url(:thumb)%></td>
      <td><%= listing.name %></td>
      <td><%= listing.description %></td>
      <td><%= number_to_currency(listing.price) %></td>
      <td>
        <!-- Single button -->
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li> <%= link_to "View", listing, class: "btn brn-link" %> </li>
              <li><%= link_to "Edit", edit_listing_path(listing) , class: "btn brn-link" %></li>
              <li><%= link_to "Destroy", listing, method: :delete, data: {confirm: "Are you sure?"} , class: "btn brn-link" %></li>
            </ul>
          </div>
      </td>
    <% end %>
    </tr>

</table>


<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
